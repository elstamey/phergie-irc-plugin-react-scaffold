{
    "name": "{{composer_name}}",
    "description": "Phergie plugin for {{purpose}}",
    "keywords": [ "phergie", "irc", "bot", "plugin" ],
    "license": "{{license_value}}",
    "authors": [
        {
            "name": "{{author_name}}",
            "email": "{{author_email}}",
            "homepage": "{{author_url}}",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "{{author_email}}",
        "irc": "irc://irc.freenode.net/phergie",
        "issues": "{{issues_url}}",
        "source": "{{repo_url}}"
    },
    "require": {
        "phergie/phergie-irc-bot-react": "~2"{% if command_plugin %},
        "phergie/phergie-irc-plugin-react-command": "~2.0"
{% endif %}

    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*",
        "phake/phake": "2.0.0-beta2"
    },
{% if command_plugin %}
    "suggest": {
        "phergie/phergie-irc-plugin-react-commandhelp": "provides interactive help for commands"
    },
{% endif %}
    "autoload": {
        "psr-4": {
            "{{composer_namespace}}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{composer_tests_namespace}}\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
